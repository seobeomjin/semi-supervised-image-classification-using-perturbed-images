  
{
  "model": {
      "model_dir":"cifar10_wideresnet_cvae_attack",
      "type": "wideresnet",
      "layers": 28, 
      "width_factor": 10, 
      "n_classes": 10, 
      "normalize": true
  }, 
  "attack": {
      "type": "cvae_attack",
      "max_dist": 28, 
      "alpha": 5.6, 
      "niters": 7, 
      "model": {
          "type": "cifar10_rectangle", 
          "output_distribution": "gaussian", 
          "latent_dim": 512,
          "nblocks": 4, 
          "big_ch": 64, 
          "small_ch": 16, 
          "kernel_size": 3, 
          "padding": 1
      }, 
      "checkpoint": "cifar10c_centered.pth" 
  },

  "output_dir": "./robustness_experiments",

  "training": {
      "optimizer": "adam", 
      "epochs": 100, 
      "batch_size": 128,
      "step_size_schedule": [[0,40,100], [0, 0.2, 0]],
      "momentum": 0.9,
      "weight_decay": 0, 
      "log_interval": 100, 
      "checkpoint_interval": 10
  },

  "eval": {
      "batch_size": 128, 
      "sample_interval": 1, 
      "plot_segmentation": false
  },

  "dataset": {
      "type": "cifar10",
      "data_path": "../data",
      "transforms": "cropflip"
  }, 

  "device": "cuda"
}