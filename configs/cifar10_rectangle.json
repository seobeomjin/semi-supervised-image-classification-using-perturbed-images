  
{
  "model": {
      "model_dir":"cifar10_c_rectangle",
      "type": "cifar10_rectangle", 
      "output_distribution": "gaussian", 
      "latent_dim": 512,
      "nblocks": 4, 
      "big_ch": 64, 
      "small_ch": 16, 
      "kernel_size": 3, 
      "padding": 1
  }, 
  "perturbation" : {
      "train_type": "dataloader", 
      "test_type": "dataloader"
  },
  "output_dir": "./experiments",

  "training": {
      "optimizer": "adam", 
      "epochs": 1000, 
      "batch_size": 128,
      "step_size_schedule": [[0,400,1000], [0, 0.001, 0]],
      "beta_schedule": [[0,40,100], [0,1e-2,1e-2]],
      "momentum": 0.9,
      "weight_decay": 0, 
      "log_interval": 100, 
      "checkpoint_interval": 200
  },

  "eval": {
      "batch_size": 128, 
      "sample_interval": 50
  },

  "dataset": {
      "type": "cifar10",
      "data_path": "../data", 
      "corruptions":[
          "defocus_blur", 
          "glass_blur", 
          "motion_blur", 
          "zoom_blur", 
          "snow", 
          "frost", 
          "fog", 
          "brightness", 
          "contrast", 
          "elastic_transform", 
          "pixelate", 
          "jpeg_compression"
      ], 
      "severity":[5],
      "k": 12,
      "cropflip": {
          "pad": 4, 
          "crop": [32,32], 
          "flip": true
      }
  }, 

  "device": "cuda" 
}